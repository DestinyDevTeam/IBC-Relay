{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    /* Module Resolution Options */
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}